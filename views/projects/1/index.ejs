            background-size: 100% 100%;
            background-repeat: no-repeat;

        }

        footer {
            background-color: rgba(0, 0, 0, 0.5);
            width: 99%;
            height: 10%;
            position: absolute;
            bottom: 5px;
            margin-left: 5px;
            text-align: center;
        }

        aside {
            width: 30%;
            float: right;
            height: 90%;
        }

        body {
            margin: 10px;
            color: white;
            font-weight: bold;
        }

        #wrapper {
            width: 100%;
            height: 700px;
        }

        header {
            background-color: gray;
            height: 10%;
            margin-bottom: 10px;
        }

        hr {
            margin-top: 0px;
            width: 30%;
            border-top: 1px solid #f8f8f8;
            border-bottom: 1px solid rgba(0, 0, 0, 0.2);
        }

        ul {

            height: 100%;
            list-style-type: none;
            text-align: center;
        }

        li {
            text-transform: uppercase;
            background-color: white;
            color: steelblue;
            height: 30px;
            width: 15%;
            margin-left: 50px;
            display: inline-block;
            border-left: black solid 3px;
            border-bottom: black solid 3px;
            border-right: black solid 3px;
            line-height: 30px;
            text-align: center;
        }

        li:hover {
            background-color: gray;
            border-left: white solid 3px;
            border-bottom: white solid 3px;
            border-right: white solid 3px;
            color: white;
            transition: 0.3s;
        }

        .aside-item {
            background-color: steelblue;
            height: 20%;
            text-align: center;
        }

        .aside-item:hover {
            color: red;
            font-size: 1.01em;
            font-weight: bold;
            transition: 0.5s;
            background-color: white;
            color: steelblue;
        }

        #content {
            text-align: center;
            padding-top: 25%;
            text-shadow: 0px 4px 3px rgba(0, 0, 0, 0.4);
        }

        .nav-item {
            background-color: steelblue;
            height: 100px;
            line-height: 100px;
            text-align: center;
        }

        .nav-item:hover {
            color: red;
            font-size: 1.01em;
            font-weight: bold;
            transition: 0.5s;
            background-color: white;
            color: steelblue;
        }
    </style>
</head>
